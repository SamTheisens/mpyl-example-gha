apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  labels:
    name: sbtservice
    app.kubernetes.io/version: pr-1234
    app.kubernetes.io/managed-by: Helm
    app.kubernetes.io/name: sbtservice
    app.kubernetes.io/instance: sbtservice
    maintainers: MPyL
    maintainer: MPyL
    version: pr-1234
  name: sbtservice-prometheus-rule
spec:
  groups:
  - name: sbtservice-prometheus-rule-group
    rules:
    - alert: ServiceError
      annotations:
        description: Service has encountered errors
      expr: 'true'
      for: 1m
      labels:
        alertname: ServiceError
        severity: warning
    - alert: ServiceErrorCritical
      annotations:
        description: Service has encountered critical errors
      expr: 'true'
      for: 1m
      labels:
        alertname: ServiceErrorCritical
        severity: critical
